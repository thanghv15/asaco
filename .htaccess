Options +FollowSymlinks
RewriteEngine On

# deal with admin first
RewriteCond %{REQUEST_URI} ^/truonghoc/(admin) 
RewriteRule ^admin/assets/(.*)$ backend/web/assets/$1 [L]
RewriteRule ^admin/css/(.*)$ backend/web/css/$1 [L]
RewriteRule ^admin/js/(.*)$ backend/web/js/$1 [L]
RewriteRule ^admin/plugins/(.*)$ backend/web/plugins/$1 [L]
RewriteRule ^admin/dist/(.*)$ backend/web/dist/$1 [L]
RewriteRule ^admin/uploads/(.*)$ backend/web/uploads/$1 [L]
RewriteRule ^admin/fonts/(.*)$ backend/web/fonts/$1 [L]

RewriteCond %{REQUEST_URI} !^/truonghoc/backend/web/(assets|css)/
RewriteCond %{REQUEST_URI} !^/truonghoc/backend/web/(assets|js)/ 
RewriteCond %{REQUEST_URI} !^/truonghoc/backend/web/(assets|plugins)/  
RewriteCond %{REQUEST_URI} !^/truonghoc/backend/web/(assets|dist)/  
RewriteCond %{REQUEST_URI} !^/truonghoc/backend/web/(assets|uploads)/  
RewriteCond %{REQUEST_URI} !^/truonghoc/backend/web/(assets|fonts)/  
RewriteCond %{REQUEST_URI} ^/truonghoc/(admin) 
RewriteRule ^.*$ backend/web/index.php [L]

# for frontend
RewriteCond %{REQUEST_URI} ^/truonghoc/(assets|css) 
RewriteCond %{REQUEST_URI} ^/truonghoc/(assets|js)  
RewriteCond %{REQUEST_URI} ^/truonghoc/(assets|plugins)  
RewriteCond %{REQUEST_URI} ^/truonghoc/(assets|dist)   
RewriteCond %{REQUEST_URI} ^/truonghoc/(assets|fonts)   
RewriteCond %{REQUEST_URI} ^/truonghoc/(assets|image)   
RewriteRule ^assets/(.*)$ frontend/web/assets/$1 [L]
RewriteRule ^css/(.*)$ frontend/web/css/$1 [L]
RewriteRule ^js/(.*)$ frontend/web/js/$1 [L]
RewriteRule ^plugins/(.*)$ frontend/web/plugins/$1 [L]
RewriteRule ^dist/(.*)$ frontend/web/dist/$1 [L]
RewriteRule ^fonts/(.*)$ frontend/web/fonts/$1 [L]
RewriteRule ^image/(.*)$ frontend/web/image/$1 [L]

#public
RewriteRule ^public/(.*)$ public/$1 [L]
RewriteCond %{REQUEST_URI} !^/truonghoc/public/(assets|images)/
RewriteCond %{REQUEST_URI} !^/truonghoc/public/(assets|file)/

RewriteCond %{REQUEST_URI} !^/truonghoc/(frontend|backend)/web/(assets|css)/  
RewriteCond %{REQUEST_URI} !index.php
RewriteCond %{REQUEST_FILENAME} !-f [OR]
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^.*$ frontend/web/index.php